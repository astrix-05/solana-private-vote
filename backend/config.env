# Server Configuration
PORT=3001
NODE_ENV=development

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Government Wallet Configuration (will be generated if not provided)
GOVERNMENT_WALLET_PRIVATE_KEY=
GOVERNMENT_WALLET_PUBLIC_KEY=

# Security
JWT_SECRET=your_jwt_secret_change_in_production_12345
API_KEY=your_api_key_change_in_production_67890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
